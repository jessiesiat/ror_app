<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @post.name %>
</p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>

<p>
	<b>Tags:</b>
	<%= join_tags(@post) %>
</p>

<h2>Comments</h2>
<% @post.comments.each do |comment| %>

	<p>
	  <b>Commenter:</b>
	  <%= comment.commenter %>
	</p>
	 
	<p>
	  <b>Comment:</b>
	  <%= comment.body %>
	</p>

	<p>
	  <%= link_to 'Destroy Comment', [comment.post, comment],
				   :confirm => 'Are you sure?',
				   :method => :delete %>
	</p>

<% end %>

<h2>Add a comment:</h2>
<%= render "comments/form" %>
 
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
